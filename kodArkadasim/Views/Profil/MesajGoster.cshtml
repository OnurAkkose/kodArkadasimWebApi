@model IEnumerable<kodArkadasim.Models.EntityFramework.Mesajlar>


@foreach (var mesaj in Model)
{
    <div>
        <div class="row">
            <div class="col-md-12 mb-4 mt-4">
                <div class="btn-toolbar">
                    <div class="btn-group">
                        <button type="button" class="btn btn-sm btn-outline-secondary">
                            <i class="mdi mdi-reply text-primary mr-1"></i>
                            <button type="button" class="btn btn-sm btn-outline-secondary" data-toggle="modal" data-target="#Modal1">Cevapla</button>
                        </button>

                    </div>
                    <div class="btn-group">

                        @Html.ActionLink("Sil","MesajiSil","Profil", new { id = mesaj.id} , new { @class = "btn btn-sm btn-outline-secondary" })
                    </div>
                </div>
            </div>
        </div>
        <div>
            <div class="sender-details">
                <img style="height:150px; width:150px;" src="@mesaj.GonderenAvatar" alt="">
                <div class="">

                    <p style="margin-left:0px; margin-top:20px;" class="sender-email">

                        Gönderen: @mesaj.GonderenKullanici
                        &nbsp;
                    </p>
                </div>
            </div>
            <hr style="border : 2px solid;" />
            <div>
                <p>@mesaj.Aciklama</p>
            </div>

        </div>
    </div>

    <div class="modal" id="Modal1">

        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Cevapla</h2>
                </div>
                <form action="/Profil/MesajiCevapla" method="post">
                    <div class="modal-body">
                        <label>Başlık*</label>
                        <input name="Baslik" id="Baslik" class="form-control" type="text" required />
                        <label>Mesaj*    </label>
                        <textarea name="Aciklama" id="Aciklama" class="form-control" required></textarea>
                        <br />
                        <input type="hidden" name="AlanKullanici" id="AlanKullanici" value="@mesaj.GonderenKullanici" />
                        <input type="hidden" name="GonderenAvatar" id="GonderenAvatar" value="@ViewBag.Avatar" />

                        <button type="submit" class="btn btn-success">Kaydet</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
}

