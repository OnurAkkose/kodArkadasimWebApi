@model List<kodArkadasim.Models.EntityFramework.Projeler>
@{
    ViewBag.Title = "Projeler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalProje">Yeni</button>
    <table class="table table-bordered" id="tableProjeler">
        <thead style="background-color:coral;">
            <tr>
                <th style="text-align:center;">Tamamlanmış Projeler</th>
                <th style="text-align:center;">Kullanıcı</th>
                <th style="text-align:center;">Tarih</th>
            </tr>






        </thead>
        <tbody style="background-color: burlywood;">
            @foreach (var proje in Model)
            {
                <tr>
                    <td>
                         @proje.Baslik  @Html.ActionLink("İncele","ProjeyiIncele", "Projeler", new { id = proje.Id }, null) <br />


                    </td>
                    <td style="text-align:center;">@Html.ActionLink(@proje.UyeName, "KullaniciProfili", "Fikirler", new { kullaniciId = proje.UyeId },  new { @class = "badge" })</td>
                    <td>@proje.Tarih</td>
                </tr>



            }
        </tbody>

    </table>


</body>


<div class="modal" id="ModalProje">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Yeni Proje</h2>
            </div>
            <form action="/Projeler/YeniProje" method="post" enctype = "multipart/form-data" >
                <div class="modal-body">

                    <label>Baslik</label>
                    <textarea name="Baslik" id="Baslik" class="form-control" required></textarea>
                    <label>Aciklama</label>
                    <textarea name="Aciklama" id="Aciklama" class="form-control" required></textarea>
                    <label>Resim</label>
                    <input  type="file" name="Resim" id="Resim" class="form-control"/>
                    <br />
                    <br />
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </div>
            </form>

        </div>
    </div>
</div>